@model Employee
@{
    ViewData["Title"] = "CreateNewEmployee";
}
<form  method="post" class="form form-horizontal">
	<div class="form-body">
		<h4 class="form-section">
			<i class="icon-user"></i> Personal Details
		</h4>
		<div class="form-group row">
			<label class="col-md-3 label-control" asp-for="Name" ></label>
			<div class="col-md-9">
				<input type="text" asp-for="Name"  class="form-control" >
				<span asp-validation-for="Name"></span>
			</div>
		</div>
		<div class="form-group row">
			<label class="col-md-3 label-control" asp-for="Address"></label>
			<div class="col-md-9">
				<input type="text" asp-for="Address" class="form-control" >
				<span asp-validation-for="Address"></span>
			</div>
		</div>



		<div class="form-group row">
			<label class="col-md-3 label-control" asp-for="ContactNumber"></label>
			<div class="col-md-9">
				<input type="text" class="form-control" asp-for="ContactNumber">
				<span asp-validation-for="ContactNumber"></span>
			</div>
		</div>

		<h4 class="form-section">
			<i class="icon-book-open"></i>Other Details
		</h4>
		<div class="form-group row">
			<label class="col-md-3 label-control" asp-for="Date"></label>
			<div class="col-md-9">
				<div class="position-relative has-icon-left">
					<input type="date" class="form-control" asp-for="Date">
					<div class="form-control-position">
						<i class="ft-message-square"></i>
					</div>
					<span asp-validation-for="Date"></span>
				</div>
			</div>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-md-9">
			<div class="form-check">
				<input class="form-check-input" type="radio" name="Gender" value="True" id="flexRadioDefault1" checked>
				<label class="form-check-label" for="flexRadioDefault1">
					ذكر
				</label>
			</div>
			<div class="form-check">
				<input class="form-check-input" type="radio" name="Gender" value="False" id="flexRadioDefault2" >
				<label class="form-check-label" for="flexRadioDefault2">
					انثى
				</label>
			</div>
		</div>
	</div>
	<div class="form-group row">
		<label class="col-md-3 label-control" asp-for="DateOfContract"></label>
		<div class="col-md-9">
			<input type="text" asp-for="DateOfContract" class="form-control" >
			<span asp-validation-for="DateOfContract"></span>
		</div>
	</div>
	<div class=" row">
		<div class="col-md-12">
			<div class=" row form-group">
				<label asp-for="StartTime" class="col-md-3 label-control"></label>
				<div class="position-relative has-icon-left col-lg-9">
					<input asp-for="StartTime" type="time"  class="form-control" >
					<div class="form-control-position">
						<i class="ft-clock"></i>
					</div>
					<span asp-validation-for="StartTime"></span>
				</div>
			</div>
		</div>
		<div class="col-md-12">
			<div class=" row form-group">
				<label asp-for="EndTime" class="col-md-3 label-control"></label>
				<div  class="position-relative has-icon-left col-lg-9">
					<input asp-for="EndTime" type="time" class="form-control" >
					<div class="form-control-position">
						<i class="ft-clock"></i>
					</div>
					<span asp-validation-for="EndTime"></span>
				</div>
			</div>
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="Salary" class="col-md-3 label-control" ></label>
		<div class="col-md-9">
			<input asp-for="Salary"  class="form-control">
			<span asp-validation-for="Salary"></span>
		</div>
	</div>



	<div class="form-group row">
		<label class="col-md-3 label-control" asp-for="NationalId"></label>
		<div class="col-md-9">
			<input type="text" asp-for="NationalId" class="form-control">
			<span asp-validation-for="NationalId"></span>
		</div>
	</div>
	<div class="form-group row">
		<label asp-for="Nationality" class="col-md-3 label-control" ></label>
		<div class="col-md-9">
			<input asp-for="Nationality" type="text" class="form-control">
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="Notes" class="col-md-3 label-control" ></label>
		<div class="col-md-9">
			<textarea asp-for="Notes"  rows="5" class="form-control" ></textarea>
		</div>
	</div>
	<div class="form-actions">
		<button type="button" class="btn btn-danger mr-1">
			<i class="icon-trash"></i> Cancel
		</button>
		<button type="submit" class="btn btn-success">
			<i class="icon-note"></i> Save
		</button>
	</div>
</form>
@section Scripts{
		<partial name="_ValidationScriptsPartial"></partial>
}