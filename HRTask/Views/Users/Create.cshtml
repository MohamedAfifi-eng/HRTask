@model CreateUserVM
@{
    ViewData["Title"] = "Create";
}

<section id="configuration">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">


                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">Add user </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="px-3">
                        <form method="post" class="form form-horizontal">
                            <div class="form-body">
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" asp-for="Email"></label>
                                    <div class="col-md-9">
                                        <input type="email" required  asp-for="Email" class="form-control">
                                        <span asp-validation-for="Email"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" asp-for="Password"></label>
                                    <div class="col-md-9">
                                        <input type="password" required asp-for="Password" class="form-control">
                                        <span asp-validation-for="Password"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="GroupId_FK" class="col-md-3 label-control" >Group Name : </label>
                                    <div class="col-md-9">
                                        <select  asp-items="ViewBag.groups" asp-for="GroupId_FK" class="form-control">
                                        </select>
                                        <span asp-validation-for="GroupId_FK" ></span>
                                    </div>
                                </div>

                            </div>




                 <div class="form-actions">
                    <a asp-action="index" type="button" class="btn btn-danger mr-1">
                        <i class="icon-trash"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="icon-note"></i> Save
                    </button>
                </div>

                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>